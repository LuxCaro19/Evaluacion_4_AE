<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Gestion de Herramientas</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Interna","Home")">
                            Home
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("listar","Trabajador")">Trabajadores</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("listar","herramienta")">Herramientas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("listar","Asignar")">Asignar</a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>


    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
