<!doctype html>
<html lang="en">
<head>
    <title>Login 08</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/Content/login/css/style.css" rel="stylesheet" />
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section"><b>Acceso al sistema Evaluacion 4</b></h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user-o"></span>
                        </div>
                        <h3 class="text-center mb-4">¿Tienes una cuenta?</h3>
                        <form action="@Url.Content("~/Login/Login")" method="post" class="login-form">
                            <div class="form-group">
                                <input type="text" class="form-control rounded-left" name="User" placeholder="Correo" required>
                            </div>
                            <div class="form-group d-flex">
                                <input type="password" class="form-control rounded-left" name="Pass" placeholder="Contraseña" required>
                            </div>
                            <div class="form-group d-md-flex">
                                @if (ViewBag.Error != null)
                                {
                                    <div class="form-group px-5">
                                        <div class="text-danger">
                                            <b>@ViewBag.Error</b>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary rounded submit p-3 px-5">Ingresar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/login/js/popper.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/login/js/main.js"></script>
</body>
</html>